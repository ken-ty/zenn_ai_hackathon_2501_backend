                                },
                                "picture_original_path": {
                                  "type": "string",
                                  "example": "https://picsum.photos/id/1062/1080/1920"
                                },
                                "picture_resize_path": {
                                  "type": "string",
                                  "example": "https://picsum.photos/id/1062/1080/1920"
                                }
